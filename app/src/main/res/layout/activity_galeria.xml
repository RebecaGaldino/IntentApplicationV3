<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:rowCount="4"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GaleriaActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="136dp"
        android:id="@+id/imageView"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/foto1"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="136dp"
        android:id="@+id/imageView2"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="15dp"
        android:src="@mipmap/foto3"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="136dp"
        android:id="@+id/imageView3"
        android:layout_row="0"
        android:layout_column="2"
        android:src="@mipmap/foto4"/>

    <ImageView
        android:layout_width="97dp"
        android:layout_height="136dp"
        android:id="@+id/imageView4"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/foto2"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="136dp"
        android:id="@+id/imageView5"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="15dp"
        android:src="@mipmap/foto5"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="136dp"
        android:id="@+id/imageView6"
        android:layout_row="1"
        android:layout_column="2"
        android:onClick="TelaCheia6"
        android:src="@mipmap/foto6"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="136dp"
        android:id="@+id/imageView7"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/foto9"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="136dp"
        android:id="@+id/imageView8"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="15dp"
        android:src="@mipmap/foto8"/>

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="18dp"
        android:id="@+id/imageButto"
        android:layout_row="2"
        android:layout_column="2"
        android:onClick="TelaCheia"
        android:src="@mipmap/foto7"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView1"
        android:visibility="invisible"
        android:layout_row="2"
        android:layout_column="2"
        android:src="@mipmap/foto7" />


</GridLayout>
